<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
             version="1.0">

	<persistence-unit name="application" transaction-type="RESOURCE_LOCAL">

        <class>fizzbuzz.springh2.Item</class>
        <class>fizzbuzz.springh2.Order</class>
        <class>fizzbuzz.springh2.Employee</class>
        <class>fizzbuzz.springh2.Department</class>
        <class>fizzbuzz.springh2.Phone</class>
        <class>fizzbuzz.springh2.ParkingSpace</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>

	</persistence-unit>

</persistence>
